{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/types/*": [
                "types/*"
            ]
        },
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "dom",
            "es2020"
        ]
    },
    "include": [
        "src/**/*"
    ]
}